def calculate_months_to_save(annual_salary, portion_saved, total_cost):
    portion_down_payment = 0.25  # 25%
    current_savings = 0
    r = 0.04  # 4% annual return on investment
    monthly_salary = annual_salary / 12
    months = 0

    while current_savings < total_cost * portion_down_payment:
        current_savings += current_savings * r / 12  # investment return
        current_savings += monthly_salary * portion_saved  # portion of salary saved
        months += 1

    return months

# Obtener entradas del usuario
annual_salary = float(input("Por favor, introduce tu salario anual: "))
portion_saved = float(input("Por favor, introduce la fracción de tu salario que quieres ahorrar (en decimal): "))
total_cost = float(input("Por favor, introduce el costo total de la casa que deseas comprar: "))

# Calcular meses para ahorrar
months_to_save = calculate_months_to_save(annual_salary, portion_saved, total_cost)

# Imprimir resultados
print("Número de meses necesarios para ahorrar para el pago inicial:", months_to_save)
